# Maintainer: Yuri Iozzelli <y.iozzelli@gmail.com>
pkgname=cheerp-utils
pkgver=11.a4dbe10
pkgrel=1
epoch=
pkgdesc="A C++ compiler for the Web, includes and tools"
arch=("any")
url="leaningtech.com/cheerp"
license=('GPL2')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("git+ssh://git@bitbucket.org/apignotti/cheerp-utils.git")
md5sums=('SKIP')

pkgver() {
  cd "$_pkgname"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}


package() {
	cd $srcdir/cheerp-utils
	mkdir -p build
	cd build
	cmake -DCHEERP_PREFIX=/opt/cheerp -DCMAKE_INSTALL_PREFIX=$pkgdir/opt/cheerp ..
	make install
}
