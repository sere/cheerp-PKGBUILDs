# Maintainer: Yuri Iozzelli <y.iozzelli@gmail.com>
pkgname=cheerp-utils
pkgver=cheerp.1.3.r28.g4de32b0
pkgrel=1
epoch=
pkgdesc="A C++ compiler for the Web, includes and tools"
arch=("any")
url="leaningtech.com/cheerp"
license=('GPL2')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("git+https://github.com/leaningtech/cheerp-utils.git")
md5sums=('SKIP')
pkgver() {
	cd $srcdir/cheerp-utils
	git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}


package() {
	cd $srcdir/cheerp-utils
	mkdir -p build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/opt/cheerp ..
	make DESTDIR=$pkgdir install
}
