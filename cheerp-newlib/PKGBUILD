# Maintainer: Yuri Iozzelli <y.iozzelli@gmail.com>
pkgname=cheerp-newlib
pkgver=cheerp.1.3.r12.gfc0cba85
pkgrel=1
epoch=
pkgdesc="A C++ compiler for the Web, C library implementation"
arch=("x86_64")
url="leaningtech.com/cheerp"
license=('GPL2')
groups=()
depends=("cheerp-llvm-clang" "cheerp-utils")
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=('!strip')
install=
changelog=
source=("git+https://github.com/leaningtech/cheerp-newlib.git"
"git+https://github.com/leaningtech/cheerp-libcxx.git")
md5sums=('SKIP'
         'SKIP')
pkgver() {
	cd $srcdir/cheerp-newlib
	git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
	cd $srcdir/cheerp-newlib/newlib
	mkdir -p build
	cd build
	../configure --host=cheerp-genericjs --with-cxx-headers=$srcdir/cheerp-libcxx/include \
		--prefix=/opt/cheerp --enable-newlib-io-long-long \
		--enable-newlib-iconv --enable-newlib-iconv-encodings=utf-16,utf-8,ucs_2 \
		'AR=gcc-ar' 'RANLIB=gcc-ranlib'
}

build() {
	cd $srcdir/cheerp-newlib/newlib/build
	make -j1
}

build_lib(){
	mkdir -p build-bc-$1
	cd build-bc-$1
	ar x ../$1/$1.a
	/opt/cheerp/bin/llvm-link *.o -o $1.bc
	mkdir -p "$pkgdir/opt/cheerp/lib/genericjs"
	cp -v $1.bc "$pkgdir/opt/cheerp/lib/genericjs/"
	cd ..
	rm -rf build-bc-$1
}

package() {
	cd $srcdir/cheerp-newlib/newlib/build
	make DESTDIR=$pkgdir install

	build_lib libc
	build_lib libm
}
