# Maintainer: Yuri Iozzelli <y.iozzelli@gmail.com>
pkgname=cheerp-llvm-clang
pkgver=cheerp.1.3.r212.g2d3995309d
pkgrel=1
epoch=
pkgdesc="A C++ compiler for the Web"
arch=("x86_64")
url="leaningtech.com/cheerp"
license=('custom')
groups=()
depends=("python" "gcc-libs")
makedepends=("cmake")
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("cheerp-llvm::git+https://github.com/leaningtech/cheerp-llvm.git"
"clang::git+https://github.com/leaningtech/cheerp-clang.git")
md5sums=('SKIP'
         'SKIP')
pkgver() {
  cd $srcdir/cheerp-llvm
  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
	cd $srcdir
	mv -n clang cheerp-llvm/tools/
	cd $srcdir/cheerp-llvm
	mkdir -p build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/opt/cheerp -DCMAKE_BUILD_TYPE=Release -DLLVM_TARGETS_TO_BUILD="ARM;CheerpBackend;X86" ..
}

build() {
	cd $srcdir/cheerp-llvm/build
	make
}

package() {
	cd $srcdir/cheerp-llvm/build
	make DESTDIR=$pkgdir install
	mkdir -p $pkgdir/usr/share/licenses/cheerp-llvm-clang
	cp $srcdir/cheerp-llvm/LICENSE.TXT $pkgdir/usr/share/licenses/cheerp-llvm-clang
}
